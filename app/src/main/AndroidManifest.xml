<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apossseller">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".ApossSellerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_w"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_w"
        android:supportsRtl="true"
        android:theme="@style/Theme.ApossSeller"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".uicontroler.activity.OrderActivity"
            android:exported="true" />
        <activity
            android:name=".uicontroler.activity.MainActivity"
            android:exported="true" />
        <activity
            android:name=".uicontroler.activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>